<div class="container">
  <div class="row">
    <% data.fly.each do |link| %>
    <div class="col-xs-12 col-sm-4">

      <!-- insert <div class="card"> -->

        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%= link[:links] %>);">
          <div class="card-category"><%= link[:location] %></div>
          <div class="card-description">
            <h2><%= link[:name] %></h2>
            <p>Very cool city, the best</p>
            <% link[:stars].times do %>
            <i class="fa fa-star" style="color: #ffb400"></i>
            <% end %>
            <% (5 - link[:stars]).times do %>
            <i class="fa fa-star" style="color: #cacccd"></i>
            <% end %>
          </div>
          <img class="card-user" src="<%= link[:avatar] %>">
          <a class="card-link" href="#" ></a>

        </div>

      </div>
      <% end %>
    </div>
  </div>



